<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Hairdresser Profile Image -->
    <ImageView
        android:id="@+id/ivHairdresserProfile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/hairdresser_profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Hairdresser Name -->
    <TextView
        android:id="@+id/tvHairdresserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hairdresser Name"
        android:textSize="18sp"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivHairdresserProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toTopOf="@id/tvHairdresserServices"
        android:layout_marginBottom="4dp"/>

    <!-- Hairdresser Services -->
    <TextView
        android:id="@+id/tvHairdresserServices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Services: Haircut, Coloring"
        android:textSize="14sp"
        android:textColor="?attr/colorSecondary"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toEndOf="@id/ivHairdresserProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHairdresserName"
        app:layout_constraintBottom_toTopOf="@id/tvHairdresserLocation"
        android:layout_marginBottom="8dp"/>

    <!-- Hairdresser Location -->
    <TextView
        android:id="@+id/tvHairdresserLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Location: City, State"
        android:textSize="14sp"
        android:textColor="?attr/colorSecondary"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toEndOf="@id/ivHairdresserProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHairdresserServices"
        app:layout_constraintBottom_toTopOf="@id/tvHairdresserRating"
        android:layout_marginBottom="8dp"/>

    <!-- Hairdresser Rating -->
    <TextView
        android:id="@+id/tvHairdresserRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rating: 5.0"
        android:textSize="14sp"
        android:textColor="?attr/colorSecondary"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivHairdresserProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHairdresserLocation"
        android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
